<div class="row">
  <div class="col-lg-4 col-lg-offset-4">
    <%= form_for(:session, url: '') do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.submit "Submit", class: "btn btn-primary btn-md", style: "margin-top: 10px" %>
    <% end %>
  </div>
</div>